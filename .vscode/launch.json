        "RUST_BACKTRACE": "full"
      }
    },
    {
      "name": "4. debug stack overflow (extreme)",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": [
          "build", "--profile", "debug-overflow", "-p", "mirrord", "--target", "x86_64-pc-windows-msvc"
        ],
        "filter": {
          "name": "mirrord"
        },
        "env": {
          "MIRRORD_LAYER_FILE": "${workspaceFolder}/target/x86_64-pc-windows-msvc/debug-overflow/layer_win.dll",
          "RUST_BACKTRACE": "full",
          "RUST_MIN_STACK": "33554432",
          "RUSTFLAGS": "-C link-args=/STACK:33554432"
        },
      },
      "args": [
        "exec", "-c", "--target", "pod/hostname-echo-rgbpkeh-74794dd94b-g5pq8/container/test", "--", "python3", "-u", "python-e2e/hostname.py"
      ],
      "program": "${workspaceFolder}/target/x86_64-pc-windows-msvc/debug-overflow/mirrord.exe",
      "env": {
        "MIRRORD_DISABLE_VERSION_CHECK": "true",
        "MIRRORD_LAYER_FILE": "${workspaceFolder}/target/x86_64-pc-windows-msvc/debug-overflow/layer_win.dll",
        "MIRRORD_OPERATOR_ENABLE": "false",
        "RUST_BACKTRACE": "full",
        "RUST_MIN_STACK": "33554432",
      },
      "cwd": "${workspaceFolder}/tests",
      "sourceMap": {},
      "sourceLanguages": [
        "rust"
      ],
      "initCommands": [
        "settings set target.process.thread.step-avoid-regexp ^std::",
        "breakpoint set --name rust_panic",
        "breakpoint set --name rust_begin_unwind",
        "breakpoint set --name __stack_chk_fail",
        "settings set target.memory.stack-memory-max-depth 2048"
      ],
    },
    {
      "type": "cppvsdbg",
      "request": "launch",
      "name": "6. debug cli exec (cppvsdbg)",
      "program": "${workspaceFolder}/target/x86_64-pc-windows-msvc/debug/mirrord.exe",
      "args": [
        "--help"
