        {
          "name": "RUST_BACKTRACE",
          "value": "full"
        },
        {
          "name": "RUST_MIN_STACK",
          "value": "16777216"
        }
      ],
      "externalConsole": false,
      "stopAtEntry": false,
      "preLaunchTask": "cargo: build mirrord (msvc)"
    },
    {
      "name": "3. attach to process (stack overflow debug)",
      "type": "lldb",
      "request": "attach",
      "pid": "${command:pickProcess}",
      "stopOnEntry": false,
      "initCommands": [
