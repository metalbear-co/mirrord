        },
        {
          "name": "RUST_BACKTRACE",
          "value": "full"
        },
        {
          "name": "RUST_MIN_STACK",
          "value": "16777216"
        }
      ],
      "console": "integratedTerminal", 
      "stopAtEntry": false,
      "preLaunchTask": "cargo: build mirrord (msvc)"
    },
    {
      "name": "3. attach to process (stack overflow debug)",
